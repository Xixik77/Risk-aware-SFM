function params = get_simulation_parameters()
    params.roomWidth = 27;
    params.roomHeight = 25;
    params.vehicle1 = [17.5, 17.5, 22.1, 22.1; 4.9, 6.8, 6.8, 4.9];
    params.vehicle2 = [17.5, 17.5, 22.1, 22.1; 8.2, 10, 10, 8.2];
    params.wallpoints = {[25, 3.6; 27, 3.6], [25, 11; 27, 11], [25, 3.6; 25, 11], [27, 3.6; 27, 11], ...
                         [17.5, 4.9; 22.1, 4.9], [17.5, 4.9; 17.5, 6.8], [17.5, 6.8; 22.1, 6.8], [22.1, 6.8; 22.1, 4.9], ...
                         [17.5, 8.3; 17.5, 10.1], [17.5, 10.1; 22.1, 10.1], [22.1, 10.1; 22.1, 8.3], [17.5, 8.3; 22.1, 8.3]};
    params.numWalls = length(params.wallpoints);
    params.obs = cell(3, 1);
    params.obs{1} = [25, 11; 27, 11; 27, 3.6; 25, 3.6];
    params.obs{2} = [17.5, 6.8; 22.1, 6.8; 22.1, 4.9; 17.5, 4.9];
    params.obs{3} = [17.5, 10.1; 22.1, 10.1; 22.1, 8.3; 17.5, 8.3];
    params.field = [0, 0; 27, 0; 27, 25; 0, 25];
end
